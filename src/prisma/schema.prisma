// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum CacheType {
  ANIMEPAHE_ID
  ANIMEPAHE_ANIME
  ANIMEPAHE_EPISODES
  ANIMEPAHE_SOURCE
  JIKAN_ANIME
}

model CacheJSON {
  id       String    @id
  type     CacheType
  cachedAt DateTime  @default(now())
  json     Json
}
