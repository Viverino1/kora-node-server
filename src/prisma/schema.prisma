generator client {
  provider = "prisma-client-js"
  output   = "../src/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum CacheType {
  HIANIME_ID
  HIANIME_ANIME
  HIANIME_EPISODES
  HIANIME_SOURCE
  JIKAN_ANIME
  ANIMEPAHE_HOME
  ANIMEPAHE_ANIME
}

model CacheJSON {
  id       String    @id
  type     CacheType
  cachedAt DateTime  @default(now())
  json     Json
}

model AnimePaheAnimesID {
  id       String   @id
  title    String
  session  String
  cachedAt DateTime @default(now())
}
